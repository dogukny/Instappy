<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#000000</item>
    </style>
    <style name="SplashScreenTheme" parent="SplashScreen_SplashTheme">
        <item name="colorPrimaryDark" >@color/status_bar_color</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>
    <style name="LightTheme" parent="AppTheme">
        <item name="textColor">#800080</item>
        <item name="colorAccent">#800080</item>
        <item name="backgroundColor">#f6f6f6</item>


    </style>

    <style name="DarkTheme" parent="AppTheme">
        <item name="textColor">#BB86FC</item>
        <item name="colorAccent">#BB86FC</item>
        <item name="backgroundColor">#121212</item>
    </style>
</resources>
